import pandas as pd
import numpy as np

input_file = 'D:\Input\Cigarette\Test Delhi\8. ANKA Insights-21_ Name_Test - Delhi-Mar-24_2024_01_04_11_31.xlsx'
input_sheet = 'Sheet1'
output = 'D:\Input\Python exp\CltA2(2)_dlh.csv'

#Full excel import & sheet parsing
df = pd.read_excel(input_file,input_sheet)
#df = full_df.parse(input_sheet)





for df_row in range(len(df)):
    if df.loc[df_row,'T_A2_2']==1 or df.loc[df_row,'T_A2_2']==2:
       
        
        if (df.loc[df_row,'T_A1_2']==1 or df.loc[df_row,'T_A1_2']==2 or df.loc[df_row,'T_A1_2']==3) and (df.loc[df_row,'T_D1_8']==1 or df.loc[df_row,'T_D1_8']==2 or df.loc[df_row,'T_D1_8']==3):
            #print('DF col',df_col)
            #print(df_col+num_of_unique_cols)
            df.drop(df_row,inplace=True)
            print(df)
        else:
            pass
    elif df.loc[df_row,'T_A2_2']==4 or df.loc[df_row,'T_A2_2']==5:
        if (df.loc[df_row,'T_A1_2']==3 or df.loc[df_row,'T_A1_2']==4 or df.loc[df_row,'T_A1_2']==5) and (df.loc[df_row,'T_D1_8']==3 or df.loc[df_row,'T_D1_8']==4 or df.loc[df_row,'T_D1_8']==5):
            #print('DF col',df_col)
            #print(df_col+num_of_unique_cols)
            df.drop(df_row,inplace=True)
            print(df)
        else:
             pass
    else:
        df.drop(df_row,inplace=True)
df_modified = df.loc[:,['Resp_Id','Interviewer','T_D1_8','T_A1_2','T_A2_2']]

df_s = df_modified['Interviewer'].value_counts()
df_modified1=pd.DataFrame(df_s)
total_sum = df_modified1.sum()
total_sum.name = 'Total'


df_modified1 = df_modified1._append(total_sum)    

 
df_empty = pd.DataFrame()   
#empty dataframe


df_modified.to_csv(output, index=False)
df_empty.to_csv(output,mode='a', index=True)
df_modified1.to_csv(output, mode='a', index=True, header=False)   

